# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/platform_dev
DATABASE_POOL_MIN=10
DATABASE_POOL_MAX=50

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# Encryption Configuration
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
MASTER_ENCRYPTION_KEY=your-256-bit-key-in-hex-format
ENCRYPTION_KEY_ID=platform-master-key-v1

# JWT Configuration
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your-jwt-secret-key
JWT_EXPIRY=15m
REFRESH_TOKEN_EXPIRY=7d

# Security Configuration
RATE_LIMIT_WINDOW=60s
RATE_LIMIT_MAX_REQUESTS=100
ALLOWED_ORIGINS=http://localhost:3000,https://mediguard-ai.com,https://finsecure-ai.com,https://devshield-ai.com,https://legalvault-ai.com,https://dataforge-ai.com

# Server Configuration
PORT=8000
NODE_ENV=development
BIND_ADDRESS=0.0.0.0

# Stripe Payment Configuration
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...
STRIPE_PUBLISHABLE_KEY=pk_test_...

# Email Configuration (Resend)
RESEND_API_KEY=re_...
FROM_EMAIL=noreply@yourdomain.com

# Monitoring Configuration
SENTRY_DSN=https://your-sentry-dsn
SENTRY_ENVIRONMENT=development
POSTHOG_API_KEY=phc_...
POSTHOG_HOST=https://app.posthog.com

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_PATH=/var/log/platform/app.log

# Feature Flags
ENABLE_REGISTRATION=true
ENABLE_EXTERNAL_INTEGRATIONS=false
ENABLE_DLP_STRICT_MODE=true

# Tenant-Specific Configuration
HEALTHCARE_DOMAIN=mediguard-ai.com
FINANCE_DOMAIN=finsecure-ai.com
ENTERPRISE_DOMAIN=devshield-ai.com
LEGAL_DOMAIN=legalvault-ai.com
DATA_DOMAIN=dataforge-ai.com
